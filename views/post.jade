extends layouts/html5

block content
  div.post
    h1
      a(href=post.url)
        = post.title
    span.date #{post.date.getDate()}/#{post.date.getMonth()+1}/#{post.date.getFullYear()}
    div.content
      != post.content
    div.tags
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.tag.label-info #{tag}

  include includes/disqus.html