doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title flarework blog
    link http://blog.flarework.com
    description A Poet RSS Example woo!
    atom:link(href='http://blog.flarework.com/rss', rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'http://blog.flarework.com' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl